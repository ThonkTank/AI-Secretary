<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/cardBackground"
    android:elevation="@dimen/elevation_card"
    android:layout_marginStart="@dimen/margin_screen"
    android:layout_marginEnd="@dimen/margin_screen"
    android:layout_marginTop="@dimen/margin_element"
    android:padding="@dimen/padding_card"
    android:clickable="true"
    android:focusable="true">

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Left Side: Task Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title with Priority Stars -->
            <TextView
                android:id="@+id/task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.TaskTitle"
                android:textColor="@color/textPrimary"
                android:text="â­â­â­ Morning Routine"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Description -->
            <TextView
                android:id="@+id/task_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.TaskDetails"
                android:textColor="@color/textSecondary"
                android:text="Meditation, Stretching, Cold Shower"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

            <!-- Info Row: Due Date, Time, Streak -->
            <LinearLayout
                android:id="@+id/info_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_small">

                <!-- Due Date/Time -->
                <TextView
                    android:id="@+id/task_due_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Caption"
                    android:textColor="@color/textSecondary"
                    android:text="ðŸ“… Today â€¢ 08:00"
                    android:visibility="gone" />

                <!-- Streak Badge -->
                <TextView
                    android:id="@+id/task_streak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Caption"
                    android:textColor="@color/streakFire"
                    android:textStyle="bold"
                    android:text="ðŸ”¥ Streak: 12"
                    android:layout_marginStart="12dp"
                    android:visibility="gone" />

                <!-- Chain Indicator (Phase 6) -->
                <TextView
                    android:id="@+id/task_chain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Caption"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:text="ðŸ”— Chain"
                    android:layout_marginStart="12dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Overdue Warning -->
            <TextView
                android:id="@+id/task_overdue_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Caption"
                android:textColor="@color/statusOverdue"
                android:textStyle="bold"
                android:text="âš ï¸ OVERDUE (2 days)"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Right Side: Checkbox -->
        <TextView
            android:id="@+id/task_checkbox"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="[ ]"
            android:textSize="24sp"
            android:textColor="@color/textSecondary"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

    <!-- Quick Actions Row -->
    <LinearLayout
        android:id="@+id/quick_actions_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small"
        android:gravity="end"
        android:visibility="gone">

        <!-- Edit Button -->
        <TextView
            android:id="@+id/action_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœŽ Edit"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground" />

        <!-- Delete Button -->
        <TextView
            android:id="@+id/action_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ—‘ï¸ Delete"
            android:textSize="12sp"
            android:textColor="@color/statusOverdue"
            android:padding="8dp"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground" />

    </LinearLayout>

</LinearLayout>
