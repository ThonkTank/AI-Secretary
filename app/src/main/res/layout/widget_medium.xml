<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/widgetBackground"
    android:padding="@dimen/widget_padding">

    <!-- Header: Streak + Today Count -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/widgetHeaderBackground"
        android:padding="@dimen/spacing_small"
        android:gravity="center_vertical">

        <!-- Streak -->
        <TextView
            android:id="@+id/widget_streak_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”¥ 0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary" />

        <!-- Today Count -->
        <TextView
            android:id="@+id/widget_today_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:textSize="14sp"
            android:textColor="@color/textSecondary" />
    </LinearLayout>

    <!-- Next Task Section -->
    <LinearLayout
        android:id="@+id/widget_next_task_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium"
        android:background="@color/cardBackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“Œ NÃ¤chste Aufgabe"
            android:textSize="12sp"
            android:textColor="@color/textSecondary"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/widget_next_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keine Aufgaben fÃ¼r heute"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:maxLines="2"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/widget_next_task_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­â­"
                android:textSize="12sp"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/widget_next_task_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Heute"
                android:textSize="12sp"
                android:textColor="@color/textSecondary" />

            <TextView
                android:id="@+id/widget_next_task_streak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”¥5"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Quick Complete Checkbox -->
        <TextView
            android:id="@+id/widget_next_task_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â˜ Als erledigt markieren"
            android:textSize="12sp"
            android:textColor="@color/textSecondary"
            android:paddingTop="8dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground" />
    </LinearLayout>

    <!-- Footer: Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/spacing_small">

        <TextView
            android:id="@+id/widget_add_task_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="âž• Neu"
            android:textSize="12sp"
            android:textColor="@color/textPrimary"
            android:padding="8dp"
            android:gravity="center"
            android:background="@color/buttonBackground"
            android:clickable="true" />

        <View
            android:layout_width="8dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/widget_open_app_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“± App"
            android:textSize="12sp"
            android:textColor="@color/textPrimary"
            android:padding="8dp"
            android:gravity="center"
            android:background="@color/buttonBackground"
            android:clickable="true" />
    </LinearLayout>

</LinearLayout>
