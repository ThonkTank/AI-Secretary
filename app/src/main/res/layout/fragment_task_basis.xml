            android:textAppearance="@style/TextAppearance.TaskDetails"
            android:textColor="@color/textPrimary"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/priority_1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="â­"
                android:textSize="20sp"
                android:layout_margin="4dp"
                android:background="@color/cardBackground"
                android:textColor="@color/priority1" />

            <Button
                android:id="@+id/priority_2"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="â­â­"
                android:textSize="20sp"
                android:layout_margin="4dp"
                android:background="@color/colorAccent"
                android:textColor="@color/textOnPrimary" />

            <Button
                android:id="@+id/priority_3"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="â­â­â­"
                android:textSize="20sp"
                android:layout_margin="4dp"
                android:background="@color/cardBackground"
                android:textColor="@color/priority3" />

            <Button
                android:id="@+id/priority_4"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="â­â­â­â­"
                android:textSize="16sp"
                android:layout_margin="4dp"
                android:background="@color/cardBackground"
                android:textColor="@color/priority4" />

        </LinearLayout>

        <!-- FÃ¤lligkeit -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FÃ¤lligkeit"
            android:textAppearance="@style/TextAppearance.TaskDetails"
            android:textColor="@color/textPrimary"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/due_today"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Heute"
                android:textColor="@color/textOnPrimary"
                android:background="@color/colorPrimary"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/due_tomorrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Morgen"
                android:textColor="@color/textPrimary"
                android:background="@color/cardBackground"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/due_custom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Datum..."
                android:textColor="@color/textPrimary"
                android:background="@color/cardBackground"
                android:layout_margin="4dp" />

        </LinearLayout>

        <!-- Selected Due Date Display -->
        <TextView
            android:id="@+id/selected_due_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
