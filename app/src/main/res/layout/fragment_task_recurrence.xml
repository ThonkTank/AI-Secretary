<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_screen">

        <!-- Recurrence Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wiederholungs-Typ"
            android:textAppearance="@style/TextAppearance.TaskDetails"
            android:textColor="@color/textPrimary"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <RadioGroup
            android:id="@+id/recurrence_type_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_once"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Einmalig"
                android:textColor="@color/textPrimary"
                android:checked="true"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_x_per_y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="x mal pro Zeitraum (z.B. 3 mal pro Woche)"
                android:textColor="@color/textPrimary"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_every_x_y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alle x Zeiteinheiten (z.B. alle 2 Tage)"
                android:textColor="@color/textPrimary"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_scheduled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zu bestimmten Zeiten (z.B. jeden Montag 09:00)"
                android:textColor="@color/textPrimary"
                android:padding="8dp" />

        </RadioGroup>

        <!-- X per Y Container -->
        <LinearLayout
            android:id="@+id/x_per_y_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HÃ¤ufigkeit"
                android:textAppearance="@style/TextAppearance.TaskDetails"
                android:textColor="@color/textPrimary"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/input_x_count"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="3"
                    android:inputType="number"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@color/cardBackground"
                    android:textColor="@color/textPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" mal pro "
                    android:textColor="@color/textPrimary"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

                <Spinner
                    android:id="@+id/spinner_y_period"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Every X Y Container -->
        <LinearLayout
            android:id="@+id/every_x_y_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Intervall"
                android:textAppearance="@style/TextAppearance.TaskDetails"
                android:textColor="@color/textPrimary"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alle "
                    android:textColor="@color/textPrimary"
                    android:paddingEnd="8dp" />

                <EditText
                    android:id="@+id/input_x_interval"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="2"
                    android:inputType="number"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@color/cardBackground"
                    android:textColor="@color/textPrimary" />

                <Spinner
                    android:id="@+id/spinner_y_unit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Scheduled Container -->
        <LinearLayout
            android:id="@+id/scheduled_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zeitplan (Phase 3)"
                android:textAppearance="@style/TextAppearance.TaskDetails"
                android:textColor="@color/textSecondary"
                android:textStyle="italic"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Die erweiterte Zeitplanung wird in Phase 3 implementiert."
                android:textColor="@color/textSecondary"
                android:padding="12dp"
                android:background="@color/cardBackground" />

        </LinearLayout>

        <!-- Info Text -->
        <TextView
            android:id="@+id/recurrence_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Einmalige Aufgabe"
            android:textAppearance="@style/TextAppearance.Caption"
            android:textColor="@color/textSecondary"
            android:paddingTop="16dp"
            android:gravity="center" />

    </LinearLayout>

</ScrollView>
