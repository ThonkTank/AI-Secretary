<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/widgetBackground"
    android:padding="@dimen/widget_padding">

    <!-- Header: Compact -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/widgetHeaderBackground"
        android:padding="6dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widget_streak_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”¥ 0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary" />

        <TextView
            android:id="@+id/widget_today_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:textSize="12sp"
            android:textColor="@color/textSecondary" />
    </LinearLayout>

    <!-- Next Task Section - Compact -->
    <LinearLayout
        android:id="@+id/widget_next_task_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/spacing_small"
        android:background="@color/cardBackground"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widget_next_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keine Aufgaben"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:maxLines="3"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/widget_next_task_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­â­"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/widget_next_task_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Heute"
                android:textSize="10sp"
                android:textColor="@color/textSecondary"
                android:paddingStart="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Quick Complete Button -->
    <TextView
        android:id="@+id/widget_next_task_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="â˜ Erledigt"
        android:textSize="11sp"
        android:textColor="@color/textPrimary"
        android:padding="8dp"
        android:gravity="center"
        android:background="@color/buttonBackground"
        android:clickable="true" />

</LinearLayout>
