<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_card"
    android:background="@color/cardBackground">

    <!-- Header -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aufgabe abgeschlossen!"
        android:textAppearance="@style/TextAppearance.TaskTitle"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Task Title Display -->
    <TextView
        android:id="@+id/task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Morning Routine"
        android:textAppearance="@style/TextAppearance.TaskDetails"
        android:textColor="@color/textPrimary"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="24dp" />

    <!-- Time Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wie lange hat es gedauert?"
        android:textAppearance="@style/TextAppearance.TaskDetails"
        android:textColor="@color/textPrimary"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/time_5min"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5 Min"
            android:textColor="@color/textPrimary"
            android:background="@color/cardBackground"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/time_15min"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="15 Min"
            android:textColor="@color/textPrimary"
            android:background="@color/cardBackground"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/time_30min"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="30 Min"
            android:textColor="@color/textPrimary"
            android:background="@color/cardBackground"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/time_1h"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1 Std"
            android:textColor="@color/textPrimary"
            android:background="@color/cardBackground"
            android:layout_margin="4dp" />

    </LinearLayout>

    <!-- Selected Time Display -->
    <TextView
        android:id="@+id/selected_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="â±ï¸ Keine Auswahl"
        android:textAppearance="@style/TextAppearance.Caption"
        android:textColor="@color/textSecondary"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="16dp" />

    <!-- Difficulty Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wie schwierig war es?"
        android:textAppearance="@style/TextAppearance.TaskDetails"
        android:textColor="@color/textPrimary"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/star_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="â˜†"
            android:textSize="32sp"
            android:textColor="@color/textSecondary"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/star_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="â˜†"
            android:textSize="32sp"
            android:textColor="@color/textSecondary"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/star_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="â˜†"
            android:textSize="32sp"
            android:textColor="@color/textSecondary"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/star_4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="â˜†"
            android:textSize="32sp"
            android:textColor="@color/textSecondary"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/star_5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="â˜†"
            android:textSize="32sp"
            android:textColor="@color/textSecondary"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

    <TextView
        android:id="@+id/difficulty_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keine Bewertung"
        android:textAppearance="@style/TextAppearance.Caption"
        android:textColor="@color/textSecondary"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="16dp" />

    <!-- Streak Feedback -->
    <TextView
        android:id="@+id/streak_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ”¥ Streak: 12 Tage!"
        android:textAppearance="@style/TextAppearance.TaskTitle"
        android:textColor="@color/streakFire"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:visibility="gone" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/skip_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ãœberspringen"
            android:textColor="@color/textSecondary"
            android:background="@android:color/transparent"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Speichern"
            android:textColor="@color/textOnPrimary"
            android:background="@color/colorAccent"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
