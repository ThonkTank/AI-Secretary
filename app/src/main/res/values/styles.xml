<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme - Design System v1.0 -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
    </style>

    <!-- Typography Styles -->

    <!-- Headers -->
    <style name="TextAppearance.Title" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Body Text -->
    <style name="TextAppearance.Body" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Caption" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Task-Specific Styles -->
    <style name="TextAppearance.TaskTitle" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TaskDetails" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:alpha">0.7</item>
    </style>

    <!-- Streak Number (Large) -->
    <style name="TextAppearance.StreakNumber" parent="android:TextAppearance">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/streakFire</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Widget Text -->
    <style name="TextAppearance.Widget" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.WidgetSmall" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Button Styles -->
    <style name="Button.Primary" parent="android:Widget.Material.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/textOnPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Button.Accent" parent="android:Widget.Material.Button">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/textOnAccent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Card Styles -->
    <style name="CardView.Default">
        <item name="android:background">@color/cardBackground</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="CardView.Elevated">
        <item name="android:background">@color/cardBackground</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Spacing Helpers -->
    <style name="Spacing.Small">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Spacing.Medium">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="Spacing.Large">
        <item name="android:layout_margin">24dp</item>
    </style>
</resources>
