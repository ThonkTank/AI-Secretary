<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material theme for modern Android (SDK 21+) -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.Header" parent="android:TextAppearance.Material.Large">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TaskTitle" parent="android:TextAppearance.Material.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TaskDetails" parent="android:TextAppearance.Material.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="TextAppearance.Caption" parent="android:TextAppearance.Material.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>
</resources>
