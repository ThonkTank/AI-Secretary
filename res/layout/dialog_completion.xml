<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Completed!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/completionTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Title"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Time Spent Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How much time did you spend?"
        android:textSize="14sp"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/timeSpentInput"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="15"
            android:inputType="number"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" minutes"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/averageTimeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="(Avg: --)"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:gravity="end" />

    </LinearLayout>

    <!-- Difficulty Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How difficult was it?"
        android:textSize="14sp"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy"
            android:textSize="12sp" />

        <SeekBar
            android:id="@+id/difficultySeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="10"
            android:progress="5"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hard"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/difficultyValueText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Difficulty: 5/10"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="4dp" />

    <!-- Notes Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notes (optional)"
        android:textSize="14sp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/completionNotesInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Any thoughts about this task?"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:maxLines="4"
        android:gravity="top"
        android:padding="8dp"
        android:background="#F0F0F0"
        android:layout_marginTop="8dp" />

    <!-- Quick Complete Option -->
    <CheckBox
        android:id="@+id/quickCompleteCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip this dialog next time (quick complete)"
        android:layout_marginTop="16dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/skipDetailsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Skip Details"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/saveCompletionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>